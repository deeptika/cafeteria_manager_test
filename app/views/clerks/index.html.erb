<section>
<h4 id="notice"><%= params[:notice] %></h4>

<h1>Clerks</h1>

<table>
    <thead>
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Remove</th>
        </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td> <%= user.first_name %> </td>
                <td> <%= user.last_name %> </td>
                <td> <%= user.email %> </td>
                <td> <%= link_to "Remove", user, method: :delete, data: { confirm: "Are you sure?" } %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to "Add clerk", new_clerk_path %>
</section>
