<p id="notice"><%= notice %></p>

<h1>Menus</h1>

<table>
  <thead>
    <tr>
      <th>Menu name</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.menu_name %></td>
        <td><%= menu.active %></td>
        <td><%= link_to "Show", menu %></td>
        <td><%= link_to "Edit", edit_menu_path(menu) %></td>
        <td><%= link_to "Delete", menu, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Menu", new_menu_path %>
